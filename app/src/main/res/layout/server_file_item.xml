<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/avatar_imv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_server_user" />

    <TextView
        android:id="@+id/message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/avatar_imv"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@id/avatar_imv"
        android:background="@drawable/chat_item_background"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:clickable="true"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_file_present"
        android:layout_alignEnd="@id/message_content"
        android:layout_alignTop="@id/message_content"
        android:layout_alignBottom="@id/message_content"
        android:scaleType="center"
        />
</RelativeLayout>